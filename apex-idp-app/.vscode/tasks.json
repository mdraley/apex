{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Frontend: install",
      "type": "shell",
      "command": "npm install",
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "Frontend: dev",
      "type": "shell",
      "command": "npm run dev",
      "options": { "cwd": "${workspaceFolder}" },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Frontend: build",
      "type": "shell",
      "command": "npm run build",
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "Frontend: start",
      "type": "shell",
      "command": "npm run start",
      "options": { "cwd": "${workspaceFolder}" },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Frontend: open app",
      "type": "shell",
      "command": "powershell -NoProfile -Command \"Start-Process 'http://localhost:3000'\"",
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "Frontend: lint",
      "type": "shell",
      "command": "npm run lint",
      "options": { "cwd": "${workspaceFolder}" }
    }
  ]
}
