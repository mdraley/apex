{
  // Always open terminals rooted at the Frontend folder
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  // Use the workspace TypeScript if present
  "typescript.tsdk": "node_modules/typescript/lib",

  // Keep build artifacts hidden from the explorer
  "files.exclude": {
    "**/dist": true,
    "**/.parcel-cache": true,
    "**/.next": true
  },

  // Format/lint (optional—remove if you don’t use these)
  "editor.formatOnSave": true,
  "prettier.requireConfig": true,
  "eslint.alwaysShowStatus": true
}
