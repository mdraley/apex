# Development Dockerfile for Apex IDP API Gateway
# Build locally first: mvn clean package -DskipTests
FROM openjdk:17-jdk-slim

# Install development tools
RUN apt-get update && apt-get install -y \
    curl \
    jq \
    netcat-traditional \
    && rm -rf /var/lib/apt/lists/*

# Create a non-root user
RUN groupadd -r developer && useradd -r -g developer developer

# Set the working directory
WORKDIR /app

# Copy the built JAR (assumes local build completed)
COPY apex-api-gateway/target/*.jar app.jar

# Create logs directory
RUN mkdir -p /app/logs && chown -R developer:developer /app

# Switch to non-root user
USER developer

# Expose the application port and debug port
EXPOSE 8080 5005

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8080/api/actuator/health || exit 1

# Default command with debug enabled for development
CMD ["java", \
     "-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005", \
     "-Dspring.profiles.active=docker", \
     "-Xmx512m", \
     "-Xms256m", \
     "-XX:+UseG1GC", \
     "-XX:+UseStringDeduplication", \
     "-jar", \
     "app.jar"]
